</LinearLayout>   


  
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:background="#d6dde8"
    android:orientation="vertical" > 
       <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="验光仪状态：  " />         
        <TextView
           android:id="@+id/console_text_device"
           android:layout_width="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="未连接" />             
    </LinearLayout>   
    <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="服务器状态：  " />         
        <TextView
           android:id="@+id/console_text_server"
           android:layout_width="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="未连接" />             
    </LinearLayout>   

    
    
     <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"        
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="控制状态：  " />         
        <TextView
           android:id="@+id/console_text_contrl"
           android:layout_width="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="未连接 " />             
    </LinearLayout>     
  </LinearLayout>     
     
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:background="#e6edf8"
    android:orientation="vertical" >   
     
    
    <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">"
        <Button
            android:id="@+id/console_button_connectdevice"
            android:layout_width="120dp"          
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:background="#93b3d8" 
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="连接验光仪" />         
        <Button
            android:id="@+id/console_button_connectserver"
            android:layout_width="120dp"          
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:background="#93b3d8"   
            android:layout_weight="1"         
            android:text="连接服务器" />        
        <Button
            android:id="@+id/console_button_restartserver"
            android:layout_width="120dp"          
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF"
            android:background="#93b3d8"  
            android:layout_weight="1"          
            android:text="重置服务" />                   
