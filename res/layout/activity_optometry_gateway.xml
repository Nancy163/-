        android:layout_marginTop="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="服务器域名：  " />         
