            android:id="@+id/console_button_servername"
            android:layout_width="200dp"          
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@layout/shape_button" 
            android:text="设置" />            
    </LinearLayout>  
    
     <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="服务器IP：  " />         
        <Button
            android:id="@+id/console_button_serverip"
            android:layout_width="200dp"          
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@layout/shape_button" 
            android:text="设置" />            
    </LinearLayout>    
    
     <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="服务器端口：  " />         
        <Button
            android:id="@+id/console_button_serverport"
            android:layout_width="200dp"          
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@layout/shape_button" 
            android:text="设置" />            
    </LinearLayout>   
    
    <View  
     android:layout_width="fill_parent"  
     android:layout_height="1px"  
     android:background="?android:attr/listDivider"  
     />       
     <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="网关ID：" />         
        <Button
            android:id="@+id/console_button_gatawayid"
            android:layout_width="200dp"          
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@layout/shape_button" 
            android:text="设置" />            
    </LinearLayout>    
         
     <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="网关名称  ：" />         
        <Button
            android:id="@+id/console_button_gatawayname"
            android:layout_width="200dp"          
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@layout/shape_button" 
            android:text="设置" />            
    </LinearLayout>  
    
    <LinearLayout
        android:id="@+id/widget36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">"
        <TextView
           android:id="@+id/textView2"
           android:layout_width="120dp"
           android:layout_marginLeft="20dp"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:text="网关信息：  " />         
        <Button
            android:id="@+id/console_button_gatewayinfo"
            android:layout_width="200dp"          
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@layout/shape_button" 
            android:text="设置" />            
